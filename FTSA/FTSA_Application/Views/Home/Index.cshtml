@{
    ViewData["Title"] = "Home Page";
    var userName = User.Identity.IsAuthenticated ? User.Identity.Name : null;
}

<div class="container-fluid">
    <section class="text-center bg-success text-white py-5">
        <h2 class="display-4">Find the Perfect Tutor for Your Learning Journey</h2>
        <p class="lead">Connect with experienced tutors in a variety of subjects.</p>
        <a href="/Search" class="btn btn-light btn-lg mt-3">Start Your Search</a>
    </section>

    <section class="container my-5">
        <h3 class="text-center text-success mb-4">Featured Tutors</h3>
        <div class="row">
            <div class="col-md-4">
                <div class="card border-success mb-4 shadow-sm">
                    <img src="@Url.Content("~/images/1.png")" class="card-img-top" alt="Tutor 1">
                    <div class="card-body">
                        <h5 class="card-title text-success">Tutor 1 - Mathematics</h5>
                        <p class="card-text">Expert in high school and college-level math.</p>
                        <a href="#" class="btn btn-outline-success">View Profile</a>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card border-success mb-4 shadow-sm">
                    <img src="@Url.Content("~/images/tutor2.jpg")" class="card-img-top" alt="Tutor 2">
                    <div class="card-body">
                        <h5 class="card-title text-success">Tutor 2 - English</h5>
                        <p class="card-text">Specializes in grammar and language learning.</p>
                        <a href="#" class="btn btn-outline-success">View Profile</a>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card border-success mb-4 shadow-sm">
                    <img src="@Url.Content("~/images/tutor3.jpg")" class="card-img-top" alt="Tutor 3">
                    <div class="card-body">
                        <h5 class="card-title text-success">Tutor 3 - Science</h5>
                        <p class="card-text">Focused on biology and chemistry tutoring.</p>
                        <a href="#" class="btn btn-outline-success">View Profile</a>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <section class="bg-light py-5">
        <div class="container">
            <h3 class="text-center text-success mb-4">Why Choose Tutor Finder?</h3>
            <div class="row text-center">
                <div class="col-md-4">
                    <i class="fas fa-book-reader fa-3x text-success mb-3"></i>
                    <h5 class="text-success">Personalized Learning</h5>
                    <p>Find tutors that match your specific needs and learning style.</p>
                </div>
                <div class="col-md-4">
                    <i class="fas fa-chalkboard-teacher fa-3x text-success mb-3"></i>
                    <h5 class="text-success">Qualified Tutors</h5>
                    <p>Our tutors are highly experienced in their respective fields.</p>
                </div>
                <div class="col-md-4">
                    <i class="fas fa-user-clock fa-3x text-success mb-3"></i>
                    <h5 class="text-success">Flexible Scheduling</h5>
                    <p>Set your own schedule and learn at a time that works for you.</p>
                </div>
            </div>
        </div>
    </section>
</div>
