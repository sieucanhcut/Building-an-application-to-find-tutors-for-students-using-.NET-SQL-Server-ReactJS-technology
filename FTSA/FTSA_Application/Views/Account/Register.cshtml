@model SignUpModel

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-lg">
                <div class="card-header text-center bg-success text-white">
                    <h2>Sign Up</h2>
                </div>
                <div class="card-body">
                    <form asp-action="Register" method="post">
                        <div class="mb-3">
                            <label asp-for="UserName" class="form-label">Username</label>
                            <input asp-for="UserName" class="form-control" placeholder="Enter your username" />
                            <span asp-validation-for="UserName" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Email" class="form-label">Email</label>
                            <input asp-for="Email" class="form-control" placeholder="Enter your email" />
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="PhoneNumber" class="form-label">Phone Number</label>
                            <input asp-for="PhoneNumber" class="form-control" placeholder="Enter your phone number" />
                            <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Password" class="form-label">Password</label>
                            <input asp-for="Password" class="form-control" type="password" placeholder="Enter your password" />
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="ConfirmPassword" class="form-label">Confirm Password</label>
                            <input asp-for="ConfirmPassword" class="form-control" type="password" placeholder="Confirm your password" />
                            <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Gender" class="form-label">Gender</label>
                            <input asp-for="Gender" class="form-control" placeholder="Enter your gender" />
                            <span asp-validation-for="Gender" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Location" class="form-label">Location</label>
                            <input asp-for="Location" class="form-control" placeholder="Enter your location" />
                            <span asp-validation-for="Location" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="DateOfBirth" class="form-label">Date of Birth</label>
                            <input asp-for="DateOfBirth" class="form-control" type="date" />
                            <span asp-validation-for="DateOfBirth" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="PlaceOfWork" class="form-label">Place of Work</label>
                            <input asp-for="PlaceOfWork" class="form-control" placeholder="Enter your place of work" />
                            <span asp-validation-for="PlaceOfWork" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="CitizenId" class="form-label">Citizen ID</label>
                            <input asp-for="CitizenId" class="form-control" placeholder="Enter your citizen ID" />
                            <span asp-validation-for="CitizenId" class="text-danger"></span>
                        </div>

                        <input type="hidden" asp-for="Role" id="roleField" />

                        <button type="submit" class="btn btn-success w-100">Sign Up</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="roleSelectionModal" tabindex="-1" role="dialog" aria-labelledby="roleSelectionModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header bg-success text-white">
                <h5 class="modal-title" id="roleSelectionModalLabel">Bạn muốn đăng ký với tư cách là?</h5>
            </div>
            <div class="modal-body">
                <div class="text-center">
                    <button class="btn btn-primary btn-lg mb-3" id="selectTutor">Gia Sư</button><br>
                    <button class="btn btn-secondary btn-lg" id="selectStudent">Phụ Huynh, Học Sinh</button>
                </div>
            </div>
        </div>
    </div>
</div>

@if (ViewData["ShowRegisterConfirmation"] != null && (bool)ViewData["ShowRegisterConfirmation"])
{
    <div class="modal fade" id="registerConfirmationModal" tabindex="-1" role="dialog" aria-labelledby="registerConfirmationModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="registerConfirmationModalLabel">Registration Successful</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    Your account has been created successfully. Please check your email to confirm your account.
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                </div>
            </div>
        </div>
    </div>
}

@if (ViewData["ShowRegisterConfirmation"] != null && (bool)ViewData["ShowRegisterConfirmation"])
{
    <div class="modal fade" id="registerConfirmationModal" tabindex="-1" aria-labelledby="registerConfirmationModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="registerConfirmationModalLabel">Registration Successful</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    Your account has been created successfully. Please check your email to confirm your account.
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                </div>
            </div>
        </div>
    </div>
}

@if (ViewData["ShowEmailConfirmed"] != null && (bool)ViewData["ShowEmailConfirmed"])
{
    <div class="modal fade" id="emailConfirmedModal" tabindex="-1" aria-labelledby="emailConfirmedModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="emailConfirmedModalLabel">Email Confirmation</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    Your email has been confirmed successfully. You can now log in.
                </div>
                <div class="modal-footer d-flex justify-content-center">
                    <a href="/Account/Login" class="btn btn-success">Login Now</a>
                </div>

                <div class="modal-footer d-flex justify-content-center">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                </div>
            </div>
        </div>
    </div>
}



@section Scripts {
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.0/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        $(document).ready(function () {
            // Trigger the modal when the page loads
            $('#roleSelectionModal').modal('show');

            // Handle role selection and set the hidden input value
            $('#selectTutor').on('click', function () {
                $('#roleField').val('Tutor');
                $('#roleSelectionModal').modal('hide');
            });

            $('#selectStudent').on('click', function () {
                $('#roleField').val('Student');
                $('#roleSelectionModal').modal('hide');
            });

        @if (ViewData["ShowRegisterConfirmation"] != null && (bool)ViewData["ShowRegisterConfirmation"])
        {
            <text>$('#registerConfirmationModal').modal('show'); </text>
        }

        @if (ViewData["ShowEmailConfirmed"] != null && (bool)ViewData["ShowEmailConfirmed"])
        {
            <text>$('#emailConfirmedModal').modal('show'); </text>
        }
                });
    </script>
}
